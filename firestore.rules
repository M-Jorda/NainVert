rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Products: public read, admin write
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Site content: public read, admin write
    match /siteContent/{contentId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Honeypot logs: anyone creates, admin reads, no delete
    match /honeypot_logs/{logId} {
      allow create: if true;
      allow read: if isAdmin();
      allow update, delete: if false;
    }

    // Easter eggs: public read, admin write
    match /easterEggs/{eggId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Messages: anyone creates, admin manages
    match /messages/{messageId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // Orders: validated create, admin manages
    match /orders/{orderId} {
      allow create: if true;  // Should allow public creation
      allow read, update, delete: if request.auth != null;
    }

    // Refunds: anyone creates, admin manages
    match /refunds/{refundId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // Designs: public read, admin write
    match /designs/{designId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Settings: public read, admin write
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Garments: public read, admin write
    match /garments/{garmentId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Stock: public read, admin write
    match /stock/{stockId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
