rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Dossier des designs - accessible en lecture publique, écriture admin uniquement
    match /designs/{imageId} {
      // Tout le monde peut lire les images
      allow read: if true;
      
      // Seuls les utilisateurs authentifiés peuvent écrire
      allow write: if request.auth != null;
    }
    
    // Par défaut, tout refuser
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
